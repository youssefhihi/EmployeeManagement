<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.empmanagement.app.model.Employee" table="employees">

        <id name="id" column="id">
            <generator class="identity"/>
        </id>

        <property name="name" column="name" type="string"/>
        <property name="email" column="email" type="string" unique="true" not-null="true"/>
        <property name="phone" column="phone" type="string"/>
        <property name="department" column="department" type="String"/>
        <property name="post" column="post" type="String"/>


    </class>
</hibernate-mapping>
